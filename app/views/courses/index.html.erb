<div>
  <div>
    <h1>
      All Courses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new course
    </h2>
<% if current_user != nil %>
    <form action="/insert_course" method="post">
      <div>
        <label for="course_name_box">
          Course name
        </label>

        <input type="text" id="course_name_box" name="query_course_name">
      </div>

      <div>
        <label for="term_offered_box">
          Term offered
        </label>

        <input type="text" id="term_offered_box" name="query_term_offered">
      </div>

      <div>
        <label for="description_box">
          Professor
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button>
        Create course
      </button>
    </form>
<% else %>
  <p>You must be <a href="/users/sign_in">signed in</a> to add a course.</p>
<% end %>
  </div>
</div>

<hr>
<% if current_user != nil %>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Course name
        </th>

        <th>
          Term offered
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_courses.each do |a_course| %>
      <tr>
        <td>
          <%= a_course.id %>
        </td>

        <td>
          <%= a_course.course_name %>
        </td>

        <td>
          <%= a_course.term_offered %>
        </td>

        <td>
          <%= a_course.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_course.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_course.updated_at) %> ago
        </td>

        <td>
          <a href="/courses/<%= a_course.id %>">
            Show Topics
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
<% else %>
 
<% end %>
