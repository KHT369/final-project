<div class="container mt-4">
  <h2 class="text-center mb-4">Forgot Your Password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="mb-3">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" },
                    label_html: { class: "form-label" } %>
      </div>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary px-4" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
