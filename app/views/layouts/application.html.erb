<!DOCTYPE html>
<html>
  <head>
    <title>Rails Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="utf-8">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="/css/my_styles.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid d-flex justify-content-between align-items-center">
        <!-- Navbar Links -->
        <div class="d-none d-lg-block">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link <%= 'active' if current_page?(root_path) %>" href="/">Interviews</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= 'active' if current_page?(courses_path) %>" href="/courses">Courses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= 'active' if current_page?(questions_path) %>" href="/questions">Response Bank</a>
            </li>
          </ul>
        </div>

        <!-- Center Title -->
        <span class="navbar-brand fancy-title">1Y's Magic Tool</span>

        <!-- User-specific Links -->
        <div>
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="nav-item">
                <a class="nav-link <%= 'active' if current_page?(destroy_user_session_path) %>" href="/users/sign_out">Sign out</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= 'active' if current_page?(edit_user_registration_path) %>" href="/users/edit">Edit Profile</a>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link <%= 'active' if current_page?(new_user_session_path) %>" href="/users/sign_in">Sign in</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= 'active' if current_page?(new_user_registration_path) %>" href="/users/sign_up">Sign up</a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <hr>

    <% if notice.present? %>
      <div style="color: green">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div style="color: red">
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
