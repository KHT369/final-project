<div class="container mt-4">
  <div>
    <h1 class="text-center mb-4">Topic: <%= @the_topic.title %></h1>

    <div class="d-flex justify-content-between mb-3">
      <div>
        <a href="/courses/<%= @the_topic.course_id %>" class="btn btn-secondary">Go back</a>
      </div>
      <div>
        <a href="/delete_topic/<%= @the_topic.id %>" class="btn btn-danger">Delete topic</a>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="container mb-4">
  <h2>Questions</h2>
  <div class="list-group">
    <% @the_topic.questions.order(:created_at).each do |the_question| %>
      <div class="list-group-item d-flex flex-column align-items-start">
        <strong class="mb-1"><%= the_question.role %></strong>
        <p class="mb-0"><%= the_question.body %></p>
      </div>
    <% end %>
  </div>
</div>

<hr>

<div class="container mb-4">
  <h2>Generate Practice Question</h2>
  <form action="/insert_question" method="post">
    <div class="mb-3">
      <input type="hidden" id="topic_id_box" name="query_topic_id" value="<%= @the_topic.id %>" readonly class="form-control">
    </div>
    <div class="mb-3">
      <input type="hidden" id="user_id_box" name="query_user_id" value="<%= current_user.id %>" readonly class="form-control">
    </div>
    <div class="mb-3">
      <label for="body_box" class="form-label">Question</label>
      <textarea id="body_box" name="query_body" class="form-control" style="height: 200px; resize: none;"></textarea>
    </div>
    <button class="btn btn-success">Generate Question</button>
  </form>
</div>
